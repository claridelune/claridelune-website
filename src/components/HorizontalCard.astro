---
const { title, img, desc, url, tags, target = "_blank", pubDate } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div class="mb-10 rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <div class="mr-4">
            <Image
              src={img}
              aspectRatio="16:9"
              width={750}
              format="webp"
              alt={title}
              class="max-w-full md:max-w-[13rem] rounded-lg"
            />
          </div>
        )
      }
      <div class="flex-grow">
        <div class="flex items-center mb-2">
          <p class="text-sm font-bold text-gray-500 mr-2">{pubDate}</p>
        </div>
        <h1 class="text-xl font-bold mb-2">
          {title}
        </h1>
        <p class="text-sm mb-4">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag: unknown) => 
              <div class="inline-block mr-2">
                <a href={`/journal/tag/${tag}`} class="inline-flex items-center px-2.5 py-1.5 rounded-md bg-nord-dark text-nord-primary text-xs">{tag}</a>
              </div>
              )
          }
        </div>
      </div>
    </div>
  </a>
</div>