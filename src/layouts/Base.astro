---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <div class="bg-blue-500 drawer lg:drawer-open flex">
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
      <div class="drawer-content bg-blue-500 flex-1 flex flex-col justify-center items-center">
        <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>

